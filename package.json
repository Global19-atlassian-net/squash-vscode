{
    "name": "squash-vscode",
    "displayName": "Squash",
    "description": "Debug microservices with Squash",
    "version": "0.1.0",
    "publisher": "solo.io",
    "icon": "images/squash-icon.png",
    "license": "SEE LICENSE IN LICENSE.txt",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vs-squash.attachToPod",
        "onCommand:vs-squash.startServiceWatch",
        "onCommand:vs-squash.waitForServiceSession",
        "onCommand:vs-squash.stopWaitForServiceSession"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "squash config",
            "properties": {
                "vs-squash.kubectl-path": {
                    "type": "string",
                    "default": null,
                    "description": "File path to a kubectl binary."
                },
                "vs-squash.kubectl-proxy": {
                    "type": "string",
                    "default": null,
                    "description": "HTTP proxy for kubectl port-forward."
                },
                "vs-squash.squash-path": {
                    "type": "string",
                    "default": null,
                    "description": "File path to a squash command line binary."
                },
                "vs-squash.squash-server-url": {
                    "type": "string",
                    "default": null,
                    "description": "The API endpoint of the squash server."
                }
            }
        },
        "commands": [
            {
                "command": "vs-squash.startServiceWatch",
                "title": "Squash: debug service"
            },
            {
                "command": "vs-squash.waitForServiceSession",
                "title": "Squash: resume debug service"
            },
            {
                "command": "vs-squash.attachToPod",
                "title": "Squash: debug container"
            },
            {
                "command": "vs-squash.stopWaitForServiceSession",
                "title": "Squash: stop debug service"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "shelljs": "^0.7.8"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
