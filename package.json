{
    "name": "vscode-smash",
    "displayName": "vscode-smash",
    "description": "Debug via the smash distributed debugger",
    "version": "0.0.1",
    "publisher": "f",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.attachToPod",
        "onCommand:extension.addApp",
        "onCommand:extension.deletePod"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "squash config",
            "properties": {
                "vs-squash.kubectl-path": {
                    "type": "string",
                    "default": null,
                    "description": "File path to a kubectl binary."
                },
                "vs-squash.dbgclient-path": {
                    "type": "string",
                    "default": null,
                    "description": "File path to a dbgclient binary."
                },
                "vs-squash.dbgserver-url": {
                    "type": "string",
                    "default": null,
                    "description": "The API endpoint of the debug server."
                }
            }
        },
        "commands": [
            {
                "command": "extension.addApp",
                "title": "Add application to dbg server"
            },
            {
                "command": "extension.attachToPod",
                "title": "Attach to running pod"
            },
            {
                "command": "extension.deletePod",
                "title": "Delete a pod"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "shelljs": "^0.7.8"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}