{
    "name": "vscode-squash",
    "displayName": "vscode-squash",
    "description": "Debug via the squash distributed debugger",
    "version": "0.0.1",
    "publisher": "f",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vs-squash.attachToPod",
        "onCommand:vs-squash.startServiceWatch",
        "onCommand:vs-squash.waitForServiceSession",
        "onCommand:vs-squash.stopWaitForServiceSession"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "squash config",
            "properties": {
                "vs-squash.kubectl-path": {
                    "type": "string",
                    "default": null,
                    "description": "File path to a kubectl binary."
                },
                "vs-squash.kubectl-proxy": {
                    "type": "string",
                    "default": null,
                    "description": "HTTP proxy for kubectl port-forward."
                },
                "vs-squash.dbgclient-path": {
                    "type": "string",
                    "default": null,
                    "description": "File path to a dbgclient binary."
                },
                "vs-squash.dbgserver-url": {
                    "type": "string",
                    "default": null,
                    "description": "The API endpoint of the debug server."
                }
            }
        },
        "commands": [
            {
                "command": "vs-squash.startServiceWatch",
                "title": "Squash: Instruct the Squash server to start watching a service for debug events"
            },
            {
                "command": "vs-squash.waitForServiceSession",
                "title": "Squash: Resume waiting for a debug event on a service"
            },
            {
                "command": "vs-squash.attachToPod",
                "title": "Squash: Attach to a container"
            },
            {
                "command": "vs-squash.stopWaitForServiceSession",
                "title": "Squash: Stop waiting for a debug event on a service"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "shelljs": "^0.7.8"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}